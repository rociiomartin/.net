/*
6. Utilizar Console.ReadLine() para leer líneas de texto (secuencia de caracteres que 
finaliza al presionar <ENTER>) por la consola. Por cada línea leída se debe imprimir la
cantidad de caracteres de la misma. El programa termina al ingresar la cadena vacía. 
(si st es una variable de tipo string, entonces st.Length devuelve la cantidad de 
caracteres del string).
*/

//Console.WriteLine("Ingrese una linea de texto");
string st=Console.ReadLine();
while (st != "")
{
    Console.ReadKey();
    //Console.WriteLine("La cadena contiene "+ st.Length + " caracteres");
    Console.WriteLine(st.Length);
    //Console.WriteLine("Ingrese una linea de texto");
    st=Console.ReadLine();
}
